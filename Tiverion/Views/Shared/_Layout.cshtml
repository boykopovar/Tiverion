@using Tiverion.Data.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - @PlatformSettings.PlatformName</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Tiverion.styles.css" asp-append-version="true"/>
    <link rel="icon" type="image/x-icon" href="~/res/no_bg/ico/tiverion.ico" />
